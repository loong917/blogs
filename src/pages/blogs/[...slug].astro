---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection, getEntry } from "astro:content";

export async function getStaticPaths() {
    const blogEntries = await getCollection("blogs");
    return blogEntries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

// 1. 从传入的服务器请求中获取 slug
const { slug } = Astro.params;
// 2. 直接使用请求 slug 查询条目
const entry = await getEntry("blogs", slug);
// 3. 如果条目不存在，则重定向到 404
if (entry === undefined) {
    return Astro.redirect("/404");
}

const { id, title, tag, date } = entry.data;

// 4. （可选）在模板中将条目呈现为 HTML
const { Content } = await entry.render();
---

<Layout title={title}>
    <main>
        <Header title="loong博客" />
        <div class="media" style={`--bgURL: url('/${tag}.svg');`}>
            <h1 class="media-title" transition:name=`media-image-${id}`>
                {title}
            </h1>
            <ul class="media-list">
                <li class="media-item tag">
                    <a href="/blog/category/nextjs">{tag}</a>
                </li>
                <li class="media-item time">
                    <time>{date}</time>
                </li>
            </ul>
        </div>
        <div class="body">
            <section class="py-8">
                <div class="w-full">
                    <article
                        class="prose text-white prose-headings:text-white prose-a:text-white"
                    >
                        <Content />
                    </article>
                </div>
                <div class="w-full">
                    <script
                        src="https://giscus.app/client.js"
                        data-repo="loong917/blogs"
                        data-repo-id="R_kgDOLH78fA"
                        data-category="Announcements"
                        data-category-id="DIC_kwDOLH78fM4CcnSE"
                        data-mapping="pathname"
                        data-strict="0"
                        data-reactions-enabled="1"
                        data-emit-metadata="0"
                        data-input-position="bottom"
                        data-theme="dark"
                        data-lang="zh-CN"
                        crossorigin="anonymous"
                        async></script>
                </div>
            </section>
        </div>
    </main>
</Layout>

